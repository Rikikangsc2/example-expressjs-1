    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap');
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: 'Poppins', sans-serif; background-color: #121212; color: #e0e0e0; display: flex; flex-direction: column; min-height: 100vh; }
        .container { max-width: 1200px; margin: 0 auto; padding: 30px; }
        header { display: flex; justify-content: space-between; align-items: center; background-color: #1f1f1f; color: #fff; padding: 20px; margin-bottom: 30px; border-radius: 10px; }
        .logo { display: flex; align-items: center; }
        .logo i { font-size: 40px; margin-right: 10px; }
        .logo h1 { font-size: 24px; margin: 0; }
        .dashboard-link { color: #fff; text-decoration: none; font-size: 18px; transition: color 0.3s; display: flex; align-items: center; }
        .dashboard-link i { margin-right: 5px; }
        .dashboard-link:hover { color: #ecf0f1; }
        .search-container { margin-bottom: 30px; }
        .search-container input[type="text"] { width: 100%; padding: 12px; border: 1px solid #333; border-radius: 5px; font-size: 16px; background-color: #1f1f1f; color: #e0e0e0; }
        .menu-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); grid-gap: 30px; }
        .menu-card { background-color: #1f1f1f; border-radius: 10px; padding: 30px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); transition: transform 0.2s ease, box-shadow 0.2s ease; text-decoration: none; color: inherit; cursor: pointer; }
        .menu-card:hover { transform: translateY(-5px); box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); }
        .menu-card h2 { color: #3498db; font-size: 20px; margin-bottom: 10px; }
        .menu-card p { font-size: 14px; color: #b0b0b0; margin-bottom: 20px; }
        .try-button { background-color: #3498db; color: #fff; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer; transition: background-color 0.3s; }
        .try-button:hover { background-color: #2980b9; }
        footer { background-color: #1f1f1f; color: #e0e0e0; text-align: center; padding: 10px; margin-top: 30px; border-radius: 10px; }
        footer p { font-size: 12px; }
        .no-results { text-align: center; font-size: 16px; color: #b0b0b0; }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <div class="logo">
                <i class="fas fa-cogs"></i>
                <h1>PurAPI</h1>
            </div>
            <a href="/" class="dashboard-link"><i class="fas fa-arrow-left"></i></a>
        </header>
        <div class="search-container">
            <input type="text" id="search-bar" placeholder="Search...">
        </div>
        <main>
            <div class="menu-grid" id="menu-container"></div>
        </main>
        <footer>
            <p>Â© 2024 PurAPI. All rights reserved.</p>
        </footer>
    </div>
    <script>
    let menuItems = [];
    fetch('menu.json')
        .then(response => response.json())
        .then(data => { 
            menuItems = data.sort((a, b) => a.title.localeCompare(b.title)); 
            renderMenuItems(); 
        });

    const menuContainer = document.getElementById('menu-container');
    const searchBar = document.getElementById('search-bar');

    function renderMenuItems(searchTerm = '') {
        menuContainer.innerHTML = '';
        const filteredMenuItems = menuItems.filter(item => {
            return item.title.toLowerCase().includes(searchTerm.toLowerCase()) ||
                   item.description.toLowerCase().includes(searchTerm.toLowerCase());
        });

        if (filteredMenuItems.length === 0) {
            menuContainer.innerHTML = '<p class="no-results">Tidak ada API yang ditemukan.</p>';
            return;
        }

        filteredMenuItems.forEach(item => {
            const card = document.createElement('div');
            card.classList.add('menu-card');

            card.innerHTML = `
                <h2>${item.title}</h2>
                <p>${item.description}</p>
                <button class="try-button" data-endpoint="${item.endpoint}" data-params='${JSON.stringify(item.params)}'>Try</button>
            `;

            menuContainer.appendChild(card);
        });

        const tryButtons = document.querySelectorAll('.try-button');
        tryButtons.forEach(button => {
            button.addEventListener('click', () => {
                const endpoint = button.dataset.endpoint;
                const params = JSON.parse(button.dataset.params || '[]');
                let finalUrl = endpoint;
                if (params.length > 0) {
                    let allParamsProvided = true;
                    finalUrl += '?';
                    params.forEach((param, index) => {
                        let inputValue = prompt(`Masukkan nilai untuk ${param.name}: (${param.example || ''})`);
                        if (inputValue !== null && inputValue.trim() !== "") {
                            finalUrl += `${param.name}=${encodeURIComponent(inputValue)}`;
                            if (index < params.length - 1) {
                                finalUrl += '&';
                            }
                        } else {
                            allParamsProvided = false;
                        }
                    });
                    if (!allParamsProvided) {
                        alert('Mohon isi semua parameter yang diperlukan.');
                        return;
                    }
                }
                window.location.href = finalUrl;
            });
        });
    }

    searchBar.addEventListener('input', () => {
        const searchTerm = searchBar.value;
        renderMenuItems(searchTerm);
    });
    </script>
    
</body>
